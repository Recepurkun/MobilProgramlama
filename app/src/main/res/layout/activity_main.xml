<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_sms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="SMS"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_random"
        app:layout_constraintStart_toStartOf="@+id/btn_random"
        app:layout_constraintTop_toBottomOf="@+id/btn_random" />

    <Button
        android:id="@+id/btn_convertor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convertor"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Random"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_convertor"
        app:layout_constraintStart_toStartOf="@+id/btn_convertor"
        app:layout_constraintTop_toBottomOf="@+id/btn_convertor" />

    <TextView
        android:id="@+id/tv_okul_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="202113709080"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_convertor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_isim_soyisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recep Ürkün"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_convertor"
        app:layout_constraintEnd_toEndOf="@+id/tv_okul_no"
        app:layout_constraintStart_toStartOf="@+id/tv_okul_no"
        app:layout_constraintTop_toBottomOf="@+id/tv_okul_no" />

</androidx.constraintlayout.widget.ConstraintLayout>